unit sample

use {
	lang.Sys,
    lang.Math
}

share PrimitiveTest {
    
    // Test arithmetic operations
    share testArithmetic() {
        a: int = 15
        b: int = 4
        x: float = 10.5
        y: float = 2.5
        
        Sys.outln("Arithmetic Operations:")
        Sys.outln("15 + 4 = " + (a + b))
        Sys.outln("15 - 4 = " + (a - b))
        Sys.outln("15 * 4 = " + (a * b))
        Sys.outln("15 / 4 = " + (a / b))
        Sys.outln("10.5 + 2.5 = " + (x + y))
        Sys.outln("10.5 - 2.5 = " + (x - y))
        Sys.outln("10.5 * 2.5 = " + (x * y))
        Sys.outln("10.5 / 2.5 = " + (x / y))
    }
    
    // Test comparison operations  
    share testComparisons() {
        num1 := 10
        num2 := 20
        
        Sys.outln("Comparison Operations:")
        Sys.outln("10 == 10: " + (num1 == num1))
        Sys.outln("10 == 20: " + (num1 == num2))
        Sys.outln("10 != 20: " + (num1 != num2))
        Sys.outln("10 < 20: " + (num1 < num2))
        Sys.outln("10 > 20: " + (num1 > num2))
        Sys.outln("10 <= 20: " + (num1 <= num2))
        Sys.outln("10 >= 20: " + (num1 >= num2))
    }
    
    // Test multiple return values
    share testMultiReturn(inputInteger: int)
    :: intResult: int, stringResult: text
    ~> inputInteger * 2, "Processed: " + inputInteger
    
    share main() {
        Sys.outln("=== COMPREHENSIVE TESTS ===")
        Sys.outln("")
        
        testArithmetic()
        Sys.outln("")
        
        testComparisons() 
        Sys.outln("")
        
        Sys.outln("Multiple Return Test:")
        Sys.outln([stringResult, intResult]:testMultiReturn(25))
    }
}