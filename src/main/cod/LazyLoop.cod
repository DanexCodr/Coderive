unit test

share LazyLoop {
    share main() {
    arr := [0 to 1Qi]
    
    // Test the condition directly
    outln("Testing condition evaluation:")
    outln("2 % 2 = " + (2 % 2))
    outln("2 % 2 == 0 = " + (2 % 2 == 0))
    outln("3 % 2 = " + (3 % 2))
    outln("3 % 2 == 0 = " + (3 % 2 == 0))
    
    // Also test with larger numbers
    outln("24000 % 2 = " + (24K % 2))
    outln("24000 % 2 == 0 = " + (24K % 2 == 0))
    
    // Then run the loop
for i in [0 to 1Qi] {
    if i % 2 == 0 {
        arr[i] = "even"
    } elif i % 2 == 1 {
        arr[i] = "odd"
    }
}

    outln("\nResults:")
    outln("arr[2] = " + arr[2])
    outln("arr[3] = " + arr[3])
    outln("arr[24000] = " + arr[24K])
    outln("arr[24001] = " + arr[24001])
}
}