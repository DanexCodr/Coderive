unit test

share IOTest {
    share main() {
        outln("Test 1 - string: ")
        s := in(text)
        outln("You entered: " + s)
        
        outln("\nTest 2 - integer: ")
        i := in(int)
        outln("You entered: " + i)
        
        outln("\nTest 3 - With prompt: ")
        name := in(text, "Name: ")
        outln("Hello, " + name)
        
        outln("\nTest 4 - Boolean (enter true/false): ")
        b := in(bool)
        outln("Boolean: " + b)
    }
}